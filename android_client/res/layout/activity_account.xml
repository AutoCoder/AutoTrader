<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/trade_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Stop"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Trader"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/monitor_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="监视"
            android:textColor="#ffffff" />
    </LinearLayout>

   <RelativeLayout
        android:id="@+id/tradeRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/accountRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="账户："
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/account_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/account"
                android:text="021510"
                android:textColor="#000"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/balanceRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/accountRel"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/balance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="权益总额："
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/balance_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/balance_label"
                android:text="10000.0"
                android:textColor="#000"
                android:textSize="15sp" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/availableRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/balanceRel"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/available_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="可用金额："
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/available_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/available_label"
                android:text="10000.0"
                android:textColor="#000"
                android:textSize="15sp" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/marginRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/availableRel"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/margin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="保证金："
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/margin_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/margin_label"
                android:text="10000.0"
                android:textColor="#000"
                android:textSize="15sp" />
        </RelativeLayout>     
         
        <RelativeLayout
            android:id="@+id/forzenMarginRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/marginRel"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/forzenMargin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="冻结保证金："
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/forzenMargin_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/forzenMargin_label"
                android:text="10000.0"
                android:textColor="#000"
                android:textSize="15sp" />
        </RelativeLayout>  
                 
        <RelativeLayout
            android:id="@+id/commissionRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forzenMarginRel"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/commission_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="手续费："
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/commission_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/commission_label"
                android:text="10000.0"
                android:textColor="#000"
                android:textSize="15sp" />
        </RelativeLayout>  
     
        <RelativeLayout
            android:id="@+id/forzenCommissionRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/commissionRel"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/forzenCommission_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="冻结手续费："
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/forzenCommission_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/forzenCommission_label"
                android:text="10000.0"
                android:textColor="#000"
                android:textSize="15sp" />
        </RelativeLayout> 
        
        <RelativeLayout
            android:id="@+id/positionRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forzenCommissionRel"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/position_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="仓位："
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/position_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/position_label"
                android:textColor="#000"
                android:text="[rb1605] : (10 * 2556)"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/InstrumentRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/positionRel"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/instruments_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="可选合约："
                android:textColor="#000"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/instrument_List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/instruments_label" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/strategyRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/InstrumentRel"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/strategy_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="可选策略："
                android:textColor="#000"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/strategy_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="2dip"
                android:layout_toRightOf="@id/strategy_label" />
        </RelativeLayout>
        

    </RelativeLayout>
    
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" >
	 <RadioGroup android:id="@+id/autoRadioGroup" android:contentDescription="Automatic" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
	    <RadioButton android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/semiAuto" android:text="半自动" ></RadioButton>
	    <RadioButton android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/totalAuto" android:text="全自动" android:checked="true"></RadioButton>    
	 </RadioGroup>
 	 <RadioGroup android:id="@+id/tickRadioGroup" android:contentDescription="TickNeeded" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
	    <RadioButton android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/KLine" android:text="无Tick" ></RadioButton>
	    <RadioButton android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/TickAndKLine" android:text="有Tick" android:checked="true"></RadioButton>    
	 </RadioGroup>
	</LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" >    
	    <Button
	        android:id="@+id/CheckMessage"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bg_tab"
	        android:padding="3dp"
	        android:text="查看消息"
	        android:textColor="#ffffff"
	        android:textSize="15sp" />
	    
	    <Button
	        android:id="@+id/ReleaseCtp"
	        android:layout_width="0dp"
	        android:layout_weight="2"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bg_tab"
	        android:padding="3dp"
	        android:text="关闭CTP账户"
	        android:textColor="#ffffff"
	        android:textSize="15sp" />
	
	    <Button
	        android:id="@+id/LogOut"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bg_tab"
	        android:padding="3dp"
	        android:text="退出"
	        android:textColor="#ffffff"
	        android:textSize="15sp" />
	</LinearLayout>
</LinearLayout>